{
	"bsonType": "object",
	"required": [
		"goods_id",
		"sku_name",
		"price",
		"stock"
	],
	"properties": {
		"_id": {
			"description": "存储文档 ID（SKU ID），系统自动生成"
		},
		"goods_id": {
			"bsonType": "string",
			"description": "商品 id",
			"foreignKey": "QingFengStore-mall-goods._id"
		},
		"sku_name": {
			"bsonType": "string",
			"description": "SKU名称",
			"trim": "both"
		},
		"price": {
			"bsonType": "int",
			"description": "价格，以分为单位，避免浮点计算的精度问题"
		},
		"market_price": {
			"bsonType": "int",
			"description": "市场价，以分为单位，避免浮点计算的精度问题"
		},
		"stock": {
			"bsonType": "int",
			"description": "库存",
			"defaultValue": 0
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"update_date": {
			"bsonType": "timestamp",
			"description": "修改时间",
			"defaultValue": {
				"$env": "now"
			}
		}
	},
	"version": "0.0.1"
}