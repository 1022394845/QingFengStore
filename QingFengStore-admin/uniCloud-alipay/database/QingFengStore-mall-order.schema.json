{
	"bsonType": "object",
	"required": [],
	"properties": {
		"_id": {
			"description": "存储文档 ID（统一订单 ID），系统自动生成"
		},
		"type": {
			"bsonType": "string",
			"description": "订单类型：goods:商品订单，vip:会员订单",
			"defaultValue": "goods"
		},
		"pay_type": {
			"bsonType": "string",
			"description": "支付渠道，balance | wxpay | alipay"
		},
		"total_fee": {
			"bsonType": "int",
			"description": "订单总金额，单位：分。"
		},
		"user_id": {
			"bsonType": "String",
			"description": "下单用户ID，uni-id-users表",
			"foreignKey": "uni-id-users._id",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"status": {
			"bsonType": "int",
			"minimum": -2,
			"maximum": 7,
			"description": "订单状态，1：待付款，2：待发货，3：运输中，4：待收货，5：已完成，6：申请退款，7：已退款，-1已关闭，-2：退款失败",
			"defaultValue": 1
		},
		"is_refund": {
			"bsonType": "bool",
			"description": "是否是退款订单",
			"defaultValue": false
		},
		"refund_amount": {
			"bsonType": "int",
			"description": "退款金额（非退款订单表示已退款总金额，退款订单表示该笔退款的退款金额），单位：分"
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "订单创建时间/发起退款时间"
		},
		"update_time": {
			"bsonType": "timestamp",
			"description": "订单更新时间"
		},
		"paid_time": {
			"bsonType": "timestamp",
			"description": "订单付款时间"
		},
		"refund_time": {
			"bsonType": "timestamp",
			"description": "订单完成退款时间"
		},
		"refund_desc": {
			"bsonType": "string",
			"description": "退款原因"
		},
		"transaction_id": {
			"bsonType": "string",
			"description": "微信或支付宝交易单号"
		},
		"info": {
			"bsonType": "array",
			"description": "商品信息"
		}
	},
	"version": "0.0.1"
}