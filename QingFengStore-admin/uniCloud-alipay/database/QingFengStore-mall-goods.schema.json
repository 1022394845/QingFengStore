{
	"bsonType": "object",
	"required": [
		"name",
		"category_id",
		"goods_desc"
	],
	"permission": {
		"read": "doc.is_on_sale == true",
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成"
		},
		"category_id": {
			"bsonType": "string",
			"description": "分类 id",
			"foreignKey": "QingFengStore-mall-categories._id"
		},
		"name": {
			"bsonType": "string",
			"description": "商品名称",
			"title": "名称",
			"trim": "both"
		},
		"goods_desc": {
			"bsonType": "string",
			"description": "商品详细描述",
			"title": "详细描述",
			"trim": "both"
		},
		"goods_thumb": {
			"bsonType": "string",
			"description": "商品缩略图，用于在列表或搜索结果中预览显示",
			"title": "缩略图地址",
			"pattern": "^(http://|https://|/|./|@/)\\S",
			"trim": "both"
		},
		"goods_banner_imgs": {
			"bsonType": "array",
			"description": "商品详情页的banner图地址"
		},
		"total_sell_count": {
			"bsonType": "int",
			"description": "总销量",
			"defaultValue": 0
		},
		"is_on_sale": {
			"bsonType": "bool",
			"description": "是否上架销售",
			"title": "是否上架"
		},
		"add_date": {
			"bsonType": "timestamp",
			"description": "上架时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"defaultValue": {
				"$env": "now"
			}
		}
	},
	"version": "0.0.1"
}