{
	"bsonType": "object",
	"required": [
		"goods_id",
		"sku_id",
		"price",
		"quantity"
	],
	"permission": {
		"read": "doc.user_id == auth.uid",
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（SKU ID），系统自动生成"
		},
		"goods_id": {
			"bsonType": "string",
			"description": "商品 id，参考 opendb-mall-goods 表",
			"foreignKey": "opendb-mall-goods._id"
		},
		"sku_id": {
			"bsonType": "string",
			"description": "SKU ID",
			"foreignKey": "opendb-mall-sku._id"
		},
		"quantity": {
			"bsonType": "int",
			"description": "购买数量"
		},
		"is_selected": {
			"bsonType": "bool",
			"description": "在购物车中是否选中状态"
		},
		"goods_name": {
			"bsonType": "string",
			"description": "商品名称（冗余字段）"
		},
		"sku_name": {
			"bsonType": "string",
			"description": "SKU名称，多个组合，示例：蓝色-L码（冗余字段）"
		},
		"price": {
			"bsonType": "int",
			"description": "价格/规格价格，以分为单位，避免浮点计算的精度问题（冗余字段）"
		},
		"market_price": {
			"bsonType": "int",
			"description": "市场价，以分为单位，避免浮点计算的精度问题（冗余字段）"
		},
		"goods_thumb": {
			"bsonType": "string",
			"description": "商品缩略图，加入购物车时候的商品图、型号图（冗余字段）",
			"title": "缩略图地址",
			"pattern": "^(http://|https://|/|./|@/)\\S",
			"trim": "both"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"update_date": {
			"bsonType": "timestamp",
			"description": "修改时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"user_id": {
			"bsonType": "string",
			"description": "用户uid，参考 uni-id-users 表",
			"foreignKey": "uni-id-users._id",
			"defaultValue": {
				"$env": "uid"
			}
		}
	},
	"version": "0.0.1"
}