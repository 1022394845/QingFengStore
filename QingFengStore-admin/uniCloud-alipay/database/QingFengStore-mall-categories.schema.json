{
	"bsonType": "object",
	"required": [
		"name"
	],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "类别名称",
			"title": "类别名称",
			"trim": "both"
		},
		"sort": {
			"bsonType": "int",
			"description": "类别排序，越大越靠后",
			"title": "排序",
			"defaultValue": 0
		},
		"status": {
			"bsonType": "bool",
			"description": "是否启用 true-启用",
			"title": "状态",
			"defaultValue": true
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	},
	"version": "0.0.1"
}